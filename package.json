{
  "name": "@freshcells/graphql-rest-converter",
  "version": "1.0.0",
  "description": "Create an OpenAPI-compatible HTTP API based on annotated GraphQL operations",
  "license": "MIT",
  "keywords": [
    "graphql",
    "openapi",
    "rest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/freshcells/graphql-rest-converter"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "ajv": "^8.11.0",
    "graphql": "^16.2.0",
    "graphql-request": "^4.2.0",
    "graphql-tag": "^2.12.6",
    "lodash": "^4.17.21",
    "openapi-jsonschema-parameters": "^12.0.0",
    "openapi-request-coercer": "^12.0.0",
    "openapi-request-validator": "^12.0.0",
    "openapi-response-validator": "^12.0.0",
    "openapi-schema-validator": "^12.0.0",
    "type-fest": "^2.12.2"
  },
  "peerDependencies": {
    "express": "^4"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --loglevel warn --check src",
    "format:fix": "prettier --write src",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "yarn lint --fix",
    "qa": "tsc --noEmit && yarn test && yarn lint && yarn format",
    "prepack": "yarn build"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.177",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "jest": "^28.1.1",
    "openapi-types": "^12.0.0",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.4",
    "typedoc": "^0.22.17",
    "typescript": "^4.6.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/**/*.spec.[jt]s"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  }
}
